<!-- bootstrap current user-->
<% if api_user_signed_in? %>
  <script type="text/javascript">
    window.currentUser =
      <%=
        render(
          "api/users/user.json.jbuilder",
          user: current_api_user
        ).html_safe
      %>
  </script>
<% end %>

<script type="text/javascript">
  window.csrf = "<%= form_authenticity_token %>"
</script>


<!-- react hook-on div -->
<div id="content" class="group"/>
